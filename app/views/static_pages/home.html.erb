<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t(".welcome") %></h1>
    <h2>
      <%= raw t(".str_home", link: link_to(t(".ruby_on_rail_tutorial"), t(".link_rails"))) %>
    </h2>
    <%= link_to (t".sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<img alt="Rails logo" src="/assets/rails.png" />
<% end %>
