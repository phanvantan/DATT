<% provide(:title, t(".title")) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @tour_detail] do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-group">
        <%= f.label :select %>
        <%= f.select :tour_id, options_from_collection_for_select(@tours,
          :id, :name, params[:tour_id]), name: "tour_detail[tour_id]",
          class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :select %>
        <%= f.select :place_id, options_from_collection_for_select(@places,
          :id, :name, params[:place_id]), name: "tour_detail[place_id]",
          class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :select %>
        <%= f.select :employee_id, options_from_collection_for_select(@employees,
          :id, :name, params[:employee_id]), name: "tour_detail[employee_id]",
          class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :start_day %>
        <%= f.date_select :start_day, :order => [:day, :month, :year] %>
      </div>
      <div class="form-group">
        <%= f.label :end_day %>
        <%= f.date_select :end_day, :order => [:day, :month, :year] %>
      </div>
      <%= f.submit t(".create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
