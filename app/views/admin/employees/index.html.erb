<% provide :title, t(".title") %>
<div class="row">
  <div class="col-md-12" >
    <div class="form-group">
      <div class="col-md-1 employee-size">
        <%= @employees.size %>
      </div>
      <div class="col-md-2">
        <%= t ".employees" %></p>
      </div>
    </div>
  </div>
  <div class="col-md-1">
    <div class="form-group">
      <%= link_to t(".new"), "#", class: "btn btn-primary btn-block",
        data: {toggle: "modal", target: "#form-create-employee"} %>
      <div class="modal fade form" id="form-create-employee" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <div class="center">
                <h4 class="modal-title" id="myModalLabel"><%= t ".new_employee" %></h4>
              </div>
            </div>
            <div class="modal-body new-form-create">
              <%= render "form_create" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="search-form">
        <%= search_form_for @q, url: admin_employees_path, method: :get do |f| %>
          <%= f.search_field :name_cont %>
          <%= f.submit %>
        <% end %>
    </div>
  </div>
</div>
<table class="table table-bordered table-hover text-center">
  <thead>
    <tr>
      <th><%= t ".id" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".address" %></th>
      <th><%= t ".position" %></th>
      <th><%= t ".date" %></th>
      <th colspan="2"><%= t ".action" %></th>
    </tr>
  </thead>
  <tbody class="employee-list">
        <%= render @employees %>
  </tbody>
  </table>
  <div class="modal fade form" id="form-edit-employee" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class="center">
            <h4 class="modal-title" id="myModalLabel"><%= t ".edit_employee" %></h4>
          </div>
        </div>
        <div class="modal-body new-form-edit">
          <%= render "form_edit" %>
        </div>
      </div>
    </div>
  </div>
  <%= will_paginate @employees, theme: "twitter-bootstrap-3" %>
