<tr>
  <td><%= employee.id %></td>
  <td><%= employee.name %></td>
  <td><%= employee.address %></td>
  <td><%= employee.position %></td>
  <td><%= I18n.localize employee.created_at, formats: :date_month_year %></td>
  <td>
    <%= link_to edit_admin_employee_path(employee.id),
      data: {toggle: "modal", target: "#form-edit-employee"}, remote: true,
        class: "btn btn-warning" do %>
      <span class="glyphicon glyphicon-edit"></span>
    <% end %>
  </td>
  <td>
    <%= link_to  admin_employee_path(employee.id), method: :delete,
      data:{confirm: t(".sure"), remote: true}, class: "btn btn-danger" do %>
      <span class="glyphicon glyphicon-trash"></span>
    <% end %>
  </td>
</tr>
