<tr>
  <td><%= tour.id %></td>
  <td><%= tour.name %></td>
  <td><%= tour.description %></td>
  <td><%= tour.price %></td>
  <td><%= I18n.localize tour.created_at, formats: :date_month_year %></td>
  <td>
    <%= link_to  admin_tour_detail_path(tour.id) do %>
      <span class="glyphicon glyphicon-book"></span>
    <% end %>
  </td>
  <td>
    <%= link_to edit_admin_tour_path(tour.id),
      data: {toggle: "modal", target: "#form-edit-tour"}, remote: true,
        class: "btn btn-warning" do %>
      <span class="glyphicon glyphicon-edit"></span>
    <% end %>
  </td>
  <td>
    <%= link_to  admin_tour_path(tour.id), method: :delete,
      data:{confirm: t(".sure"), remote: true}, class: "btn btn-danger" do %>
      <span class="glyphicon glyphicon-trash"></span>
    <% end %>
  </td>
</tr>
