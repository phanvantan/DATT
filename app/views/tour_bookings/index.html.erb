<p id="notice"><%= notice %></p>

<h1>Tour Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Tour detail</th>
      <th>Name</th>
      <th>Price</th>
      <th>Status</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tour_bookings.each do |tour_booking| %>
      <tr>
        <td><%= tour_booking.tour_detail_id %></td>
        <td><%= tour_booking.name %></td>
        <td><%= tour_booking.price %></td>
        <td><%= tour_booking.status %></td>
        <td><%= tour_booking.time %></td>
        <td><%= link_to 'Show', tour_booking %></td>
        <td><%= link_to 'Edit', edit_tour_booking_path(tour_booking) %></td>
        <td><%= link_to 'Destroy', tour_booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

